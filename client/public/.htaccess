<IfModule mod_rewrite.c>
  RewriteEngine On

  # Proxy API requests to the backend (assuming it runs on port 3000)
  # Modify the port if your Node server runs on a different port
  RewriteRule ^api/(.*)$ http://127.0.0.1:3000/api/$1 [P,L]

  # Serve existing files/directories directly
  RewriteCond %{REQUEST_FILENAME} -f [OR]
  RewriteCond %{REQUEST_FILENAME} -d
  RewriteRule ^ - [L]

  # SPA Fallback: Rewrite everything else to index.html
  RewriteRule ^ index.html [L]
</IfModule>
